<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin"
    android:stretchColumns="1,2,3,4">


    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2,3,4">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bill_total"
                android:textAlignment="textEnd"
                android:layout_gravity="end"/>

            <EditText
                android:id="@+id/getBillAmount"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:hint="@string/total_amount"
                android:inputType="number|numberDecimal"
                android:singleLine="true"
                android:textAlignment="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1,2,3,4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/teal"
                android:text="@string/p10"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/teal"
                android:text="@string/p15"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/teal"
                android:text="@string/p20"
                android:textAlignment="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1,2,3,4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="@string/tip"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"/>

            <TextView
                android:id="@+id/t10amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="@string/zero"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/t15amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="@string/zero"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/t20amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="@string/zero"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1,2,3,4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"/>

            <TextView
                android:id="@+id/to10amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:text="@string/zero"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/to15amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:text="@string/zero"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/to20amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:text="@string/zero"
                android:textAlignment="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1,2,3,4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/customlbl"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"/>

            <SeekBar
                android:id="@+id/seekBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:max="100" />

            <TextView
                android:id="@+id/cuamount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/teal"
                android:text="@string/percentsign"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1,2,3,4">

            <TextView
                android:id="@+id/ctiplbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tip"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"/>

            <TextView
                android:id="@+id/ctip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="@string/zero"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/ctotallbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"/>

            <TextView
                android:id="@+id/ctotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:text="@string/zero"
                android:textAlignment="center" />

        </TableRow>
    </TableLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bill_splitter"
                android:textAlignment="center"
                android:layout_span="2"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How many people?"
                android:textAlignment="center"
                />

            <EditText
                android:id="@+id/howManyPeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textAlignment="center"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Split bill total before tip"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/splitamount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#006400"
                android:text="$0.00"
                android:textAlignment="center"
                />
        </TableRow>
    </TableLayout >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/disclaimerText"
                android:text="@string/disclaimerText"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:textColor="#ff0000"

                android:textSize="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/disclaimer"


                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:textSize="10dp"
                />

        </TableRow>
    </TableLayout>


</TableLayout>